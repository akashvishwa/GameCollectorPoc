@*bootstrap form*@


<form method="post" id="AddGameForm" asp-action="AddGames">
  <div class="form-group">
    <label for="NameOfGame">Name OF Game</label>
    <input type="text"  name="NameOfGame" class="form-control"  placeholder="Enter Game's Name" pattern="[A-Za-z0-9_]"/>
    
  </div>

  <div class="form-group">
    <label for="NoOfLevel">Number OF Levels</label>
    <input type="number" name="NoOfLevel" class="form-control"  placeholder="Enter no of Levels" pattern="[0-9]"/>
    
  </div>

  <div class="form-group">
    <label for="Publisher">Publisher OF Game</label>
    <input type="text" name="Publisher" class="form-control"  placeholder="Enter Publisher's Name" pattern="[A-Za-z0-9_]"/>
    
  </div>

  <div class="form-group">
    <label for="Popularity">Popularity OF Game</label>
    <input type="number" name="Popularity" class="form-control"  placeholder="Enter Rating between 1-10"  max=10 min=0  pattern="[0-9]"/>
    
  </div>


  <input type="submit" value="Validate & Save" class="btn btn-primary" />
  


</form>